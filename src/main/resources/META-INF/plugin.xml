    <name>keywords-colors-for-scala</name>
    <vendor>siupahc</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.siupahc.keywordscolorsforscala.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.siupahc.keywordscolorsforscala.startup.MyProjectActivity" />
    </extensions>
</idea-plugin>
